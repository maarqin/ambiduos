<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@android:color/white"
    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="10dp"
        android:paddingBottom="10dp">
        <ImageView
            android:id="@+id/iv_icon_cidade"
            android:layout_width="80dp"
            android:layout_height="50dp"
            android:src="@mipmap/ic_cidade_destino_buscar"
            android:paddingRight="20dp"
            android:paddingLeft="20dp"
            android:layout_centerVertical="true"
            />
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/iv_icon_cidade"
            android:orientation="vertical"
            >
            <TextView
                android:id="@+id/tv_nome_cidade"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Cidade destino"
                android:textColor="#ccc"
                />
            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="#494949"
                android:background="@android:color/transparent"
                />
        </LinearLayout>
    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/colorSeparatorList"
        />
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="10dp"
        android:paddingBottom="10dp">
        <ImageView
            android:id="@+id/iv_icon_hotel"
            android:layout_width="80dp"
            android:layout_height="50dp"
            android:src="@mipmap/ic_hotel_buscar"
            android:paddingRight="20dp"
            android:paddingLeft="20dp"
            android:layout_centerVertical="true"
            />
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/iv_icon_hotel"
            android:orientation="vertical"
            >
            <TextView
                android:id="@+id/tv_nome_hotel"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Nome do hotel"
                android:textColor="#ccc"
                />
            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="#494949"
                android:background="@android:color/transparent"
                />
        </LinearLayout>
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/colorSeparatorList"
        />
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="10dp"
        android:paddingBottom="10dp">
        <ImageView
            android:id="@+id/iv_icon_in"
            android:layout_width="80dp"
            android:layout_height="50dp"
            android:src="@mipmap/ic_calendario_buscar"
            android:paddingRight="20dp"
            android:paddingLeft="20dp"
            android:layout_centerVertical="true"
            />
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/iv_icon_in"
            android:orientation="vertical"
            >
            <TextView
                android:id="@+id/tv_nome_in"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Check-in"
                android:textColor="#ccc"
                />
            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="#494949"
                android:background="@android:color/transparent"
                />
        </LinearLayout>
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/colorSeparatorList"
        />
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="10dp"
        android:paddingBottom="10dp">
        <ImageView
            android:id="@+id/iv_icon_out"
            android:layout_width="80dp"
            android:layout_height="50dp"
            android:src="@mipmap/ic_calendario_buscar"
            android:paddingRight="20dp"
            android:paddingLeft="20dp"
            android:layout_centerVertical="true"
            />
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/iv_icon_out"
            android:orientation="vertical"
            >
            <TextView
                android:id="@+id/tv_nome_out"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Check-out"
                android:textColor="#ccc"
                />
            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="#494949"
                android:background="@android:color/transparent"
                />
        </LinearLayout>
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/colorSeparatorList"
        />
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="10dp"
        android:paddingBottom="10dp">
        <ImageView
            android:id="@+id/iv_icon_adult"
            android:layout_width="80dp"
            android:layout_height="50dp"
            android:src="@mipmap/ic_menu_account"
            android:paddingRight="20dp"
            android:paddingLeft="20dp"
            android:layout_centerVertical="true"
            />
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/iv_icon_adult"
            android:orientation="vertical"
            >
            <TextView
                android:id="@+id/tv_nome_adult"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Adultos"
                android:textColor="#ccc"
                />
            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="#494949"
                android:background="@android:color/transparent"
                />
        </LinearLayout>
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/colorSeparatorList"
        />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="10dp"
        android:paddingBottom="10dp">
        <ImageView
            android:id="@+id/iv_icon_child"
            android:layout_width="80dp"
            android:layout_height="50dp"
            android:src="@mipmap/ic_criancas_buscar"
            android:paddingRight="20dp"
            android:paddingLeft="20dp"
            android:layout_centerVertical="true"
            />
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/iv_icon_child"
            android:orientation="vertical"
            >
            <TextView
                android:id="@+id/tv_nome_child"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Crianças"
                android:textColor="#ccc"
                />
            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="#494949"
                android:background="@android:color/transparent"
                />
        </LinearLayout>
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/colorSeparatorList"
        />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="10dp"
        android:paddingBottom="10dp">
        <ImageView
            android:id="@+id/iv_icon_start"
            android:layout_width="80dp"
            android:layout_height="50dp"
            android:src="@mipmap/ic_criancas_buscar"
            android:paddingRight="20dp"
            android:paddingLeft="20dp"
            android:layout_centerVertical="true"
            />
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/iv_icon_start"
            android:orientation="vertical"
            >
            <TextView
                android:id="@+id/tv_nome_start"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Crianças"
                android:textColor="#ccc"
                />
            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="#494949"
                android:background="@android:color/transparent"
                />
        </LinearLayout>
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/colorSeparatorList"
        />


</LinearLayout>
